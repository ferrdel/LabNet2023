@model List<Lab.EF.MVC.Models.CategoriesView>
@{
    ViewBag.Title = "Categories Page";
}


<h2>Categorias.</h2>
<div  type="button" class="btn btn-info btn-sm">
    @Html.ActionLink("Nueva Categoria", "Insert")
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre Categoria</th>
            <th scope="col">Descripcion</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var cat in Model)
        {
        <tr>
            <td>@cat.NombreCategoria</td>
            <td>@cat.Descripcion</td>
            <td  type="button" class="btn btn-warning btn-sm">@Html.ActionLink("Editar", "Update", new { id = @cat.Id })</td>
            <td  type="button" class="btn btn-danger btn-sm">@Html.ActionLink("Eliminar", "Delete", new { id = @cat.Id })</td>
        </tr>

        }
    </tbody>

</table>